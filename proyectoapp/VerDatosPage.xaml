<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectoapp.VerDatosPage"
             Title="Ver datos">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="v_datos.png"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand">
            </Image>
            <Label Text="Página ver datos"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Grid ColumnSpacing="0"
                  RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.RowDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.RowDefinitions>
                <Label Text="Fecha inicio"></Label>
                <DatePicker x:Name="dtFechaIni"></DatePicker>
                <Label Text="Fecha fin"></Label>
                <DatePicker x:Name="dtFechaFin"></DatePicker>
            </Grid>
        </StackLayout>s
    </ContentPage.Content>
</ContentPage>